<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_label_title" />

     <Button
        android:id="@+id/button_UIDemo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:text="UI Demo" />
 
    <Button
        android:id="@+id/button_surfaceViewTest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:text="@string/main_label_surfaceViewTest" />
    
    <Button
        android:id="@+id/button_optionMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:text="@string/main_label_optionMenu" />
     
    <Button
        android:id="@+id/button_threading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:text="@string/main_label_Threading" />
</LinearLayout>